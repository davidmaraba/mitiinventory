<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:fillViewport="true">
  <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:background="#fff">
 
          <!--  Header  Starts-->
        <include layout="@layout/actionbar_layout"/>
                
                
        
        <!--  Header Ends -->
      
 
        <!-- Adding Supplies Form -->
        <LinearLayout
          xmlns:android="http://schemas.android.com/apk/res/android"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="10dip"
          android:layout_below="@id/header"
            >
          <!-- Supply Name Label -->
          <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="Medicine Name"/>
          <EditText android:id="@+id/txt_medicine_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:singleLine="true"
                android:layout_marginBottom="20dip"/>
          <!--  Encounter Label -->
          <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="Medicine Encounter Number"/>
          <EditText android:id="@+id/txt_medicine_encounter"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:inputType="number"
                android:singleLine="true"
                
                android:layout_marginBottom="20dip"/>
          <!--  Restock Label -->
          <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="Medicine Restock"/>
          <EditText android:id="@+id/txt_medicine_restock"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:singleLine="true"
                android:inputType="phone"
                android:layout_marginBottom="20dip"/>
            <!-- Description Label -->
          <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="Medicine Description"/>
          <EditText android:id="@+id/txt_medicine_description"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
               android:lines="5"
                android:singleLine="true"
                android:layout_marginTop="5dip"/>
           
         
          <!-- Add Supply Button -->
          <Button android:id="@+id/btn_add_medinine"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:text="Add Medicine"/>
         
 
        </LinearLayout>
       
  </RelativeLayout>
</ScrollView>